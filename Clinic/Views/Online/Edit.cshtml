@model Online

@{
    ViewData["Title"] = "Edit";
}


<br />
<br />
<div class="row"style="margin-top:40px;background-color:aquamarine">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_online" />
            <div class="form-group">
                <label asp-for="name_online" class="control-label"></label>
                <input asp-for="name_online" class="form-control" />
                <span asp-validation-for="name_online" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adress_online" class="control-label"></label>
                <input asp-for="adress_online" class="form-control" />
                <span asp-validation-for="adress_online" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone_online" class="control-label"></label>
                <input asp-for="phone_online" class="form-control" />
                <span asp-validation-for="phone_online" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_online" class="control-label"></label>
                <input asp-for="date_online" class="form-control" />
                <span asp-validation-for="date_online" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="تعديل" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">الصفحة الرئيسيه</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
