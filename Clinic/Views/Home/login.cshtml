@model Users

@{
    ViewData["Title"] = "login";
    
}
<br />
<br />

<div class="row"style="margin-top: 50px">
    <div class="container" style="background-color:darkmagenta;">
        <h3 class="text-center" style="color:white">تسجيل الدخول</h3>
    </div>
    <div class="col-md-4" style="margin-top:30px;background-color:azure">
        <form asp-action="login">
            <div class="text-danger"style="font-size:large">
                    @ViewBag.message
                </div>
           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="ادخل اسم المستخدم" style="border-radius:30px;border-color:cornflowerblue" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" placeholder="الرقم السرى" style="border-radius:30px;border-color:cornflowerblue" id="pass" />
               
                <input type="button" value="اظهار الرقم السرى" class="btnshow" style="font-size:15px;margin-top:5px" /><i class="fa fa-eye-slash"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="دخول" class="btn btn-primary">
                    دخول
                    <i class="fa fa-sign-in"></i>
                </button>
            </div>
        </form>


    </div>
    <div class="col-md-8">
        <img src="/img/login.jpg" width="500" height="500" />
    </div>
</div>





    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script src="~/js/site.js"></script>
        <script type="text/javascript">
           
       
        $(".btnshow").mousedown(function () {
            $("#pass").attr("type", "text");

        });

        $(".btnshow").on("mouseleave", function () {
            $("#pass").attr("type", "password");
        });


        </script>
    }



