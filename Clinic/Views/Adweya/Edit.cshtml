@model ADweya

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<br />
<div class="container" style="background-color:darkmagenta;margin-top:15px">
    <h1 class="text-center" style="color:white">التعديل على الادويه</h1>
</div>

<div class="row"style="margin-top:30px;background-color:azure;margin-right:20px">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_adweya" />
            <div class="form-group">
                <label asp-for="name_adweya" class="control-label"></label>
                <input asp-for="name_adweya" class="form-control" />
                <span asp-validation-for="name_adweya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tel" class="control-label"></label>
                <input asp-for="tel" class="form-control" />
                <span asp-validation-for="tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="supplier_adweya" class="control-label"></label>
                <input asp-for="supplier_adweya" class="form-control" />
                <span asp-validation-for="supplier_adweya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="uses_adwya" class="control-label"></label>
                <input asp-for="uses_adwya" class="form-control" />
                <span asp-validation-for="uses_adwya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">العودة الى الصفحة الرئيسيه</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
