@model patient

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<script src="~/ckeditor/ckeditor.js"></script>
<form asp-action="edit" style="margin-top:30px;background-color:azure">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">

        <div class="form-group col-4">

            <label asp-for="name_patient" class="control-label"></label>
            <input asp-for="name_patient" class="form-control" />
            <span asp-validation-for="name_patient" class="text-danger"></span>
        </div>
        <div class="form-group col-2">
            <label asp-for="code" class="control-label"></label>
            <input asp-for="code" class="form-control" style="width:60%" />
            <span asp-validation-for="code" class="text-danger"></span>

        </div>
        <div class="form-group col-2">

            <label asp-for="age" class="control-label"></label>
            <input asp-for="age" class="form-control" style="width:60%" />
            <span asp-validation-for="age" class="text-danger"></span>

        </div>
    </div>

    <div class="row">
        <div class="form-group col-4">

            <label asp-for="phone_patient" class="control-label"></label>
            <input asp-for="phone_patient" class="form-control" />
            <span asp-validation-for="phone_patient" class="text-danger"></span>

        </div>
        <div class="form-group col-4">

            <label asp-for="adress_patient" class="control-label"></label>
            <input asp-for="adress_patient" class="form-control" />
            <span asp-validation-for="adress_patient" class="text-danger"></span>
        </div>
        <div class="form-group col-4">

            <label asp-for="type_kashf" class="control-label"></label>
            <select asp-for="type_kashf" class="form-control">
                <option selected disabled>---اختر----</option>
                <option>استشاره</option>
                <option>اعاده</option>
            </select>
            <span asp-validation-for="type_kashf" class="text-danger"></span>

        </div>


    </div>

